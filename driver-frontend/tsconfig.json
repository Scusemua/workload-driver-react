{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@App/*": [
        "src/app/*"
      ],
      "@Data/*": [
        "src/Data/*"
      ],
      "@Assets/*": [
        "node_modules/@patternfly/react-core/dist/styles/assets/*"
      ],
      "@Providers/*": [
        "src/Providers/*"
      ],
      "@Components/*": [
        "src/Components/*"
      ],
      "@Cards/*": [
        "src/Components/Cards/*"
      ],
      "@Icons/*": [
        "src/Assets/Icons/*"
      ]
    },
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
